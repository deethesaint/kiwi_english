<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseHandling.LessonActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_atvt_layout_presentation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/lesson_atvt_layout_presentation_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="36sp"
            android:text=""
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_atvt_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/lesson_content_cardview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lesson_content_btn_speak">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghe"
                android:background="@android:color/transparent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_info_24"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/lesson_content_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold"
                android:paddingBottom="40dp"
                android:paddingTop="200dp"
                android:text="TEXT VIEW"
                android:background="@android:color/transparent"
                />

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/lesson_content_btn_speak"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/lesson_content_btn_next"
            app:layout_constraintTop_toBottomOf="@id/lesson_content_cardview"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/baseline_play_arrow_24"
            android:paddingTop="30dp"
            android:background="@drawable/designed_btn"
            android:layout_marginBottom="25dp" />

        <Button
            android:id="@+id/lesson_content_btn_next"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toRightOf="@id/lesson_content_btn_speak"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/baseline_arrow_forward_24"
            android:paddingTop="30dp"
            android:background="@drawable/designed_btn"
            android:layout_marginBottom="25dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_atvt_layout_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/lesson_atvt_choice_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/lesson_atvt_choice_cardview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lesson_atvt_choice_gl"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn đáp án đúng"
                android:background="@android:color/transparent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_info_24"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/lesson_atvt_choice_question_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:background="@android:color/transparent"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="140dp"
                android:textSize="24sp"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/lesson_atvt_choice_next_btn"
            app:layout_constraintBottom_toTopOf="@id/lesson_atvt_choice_gl"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="60dp"
            android:background="@drawable/designed_btn"
            android:drawableEnd="@drawable/baseline_arrow_forward_24"
            android:paddingRight="20dp"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/lesson_atvt_choice_op1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/right_answer_btn"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_choice_gl"
            app:layout_constraintRight_toLeftOf="@id/lesson_atvt_choice_op2"
            app:layout_constraintBottom_toTopOf="@id/lesson_atvt_choice_op3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/lesson_atvt_choice_op2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/designed_btn"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_choice_gl"
            app:layout_constraintBottom_toTopOf="@id/lesson_atvt_choice_op4"
            app:layout_constraintLeft_toRightOf="@id/lesson_atvt_choice_op1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="15dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/lesson_atvt_choice_op3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/designed_btn"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_choice_op1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/lesson_atvt_choice_op4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/lesson_atvt_choice_op4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/designed_btn"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_choice_op2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lesson_atvt_choice_op3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_atvt_layout_filling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/lesson_atvt_filling_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/lesson_atvt_filling_cardview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lesson_atvt_filling_edtText"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điền vào chỗ trống"
                android:background="@android:color/transparent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_info_24"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/lesson_atvt_filling_question_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hello, World!"
                android:background="@android:color/transparent"
                android:layout_marginTop="240dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/lesson_atvt_filling_status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:background="@android:color/transparent"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/lesson_atvt_filling_edtText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Enter your answer here"
            android:background="@drawable/rounded_edttext"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_filling_cardview"
            app:layout_constraintBottom_toTopOf="@id/lesson_atvt_filling_gl"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:inputType="text"
            android:cursorVisible="false"
            android:textColor="@color/black"
            android:paddingRight="15dp"/>

        <Button
            android:id="@+id/lesson_atvt_filling_btn_submit"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_filling_gl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/lesson_atvt_filling_btn_next"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Check"
            android:textAllCaps="false"
            />
        
        <Button
            android:id="@+id/lesson_atvt_filling_btn_next"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_filling_gl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lesson_atvt_filling_btn_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableEnd="@drawable/baseline_arrow_forward_24"
            android:paddingRight="35dp"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_atvt_layout_speaking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_atvt_layout_nextlesson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/lesson_atvt_btn_next_lesson"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Tiếp tục"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:background="@drawable/designed_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_atvt_layout_congrats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/lesson_atvt_last_stats_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúc mừng bạn đã hoàn thành khóa học! :D"
            android:textAlignment="center"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="120dp"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/lesson_atvt_last_stats_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số câu trả lời đúng: "
            android:textColor="#009C07"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_last_stats_title_tv"
            app:layout_constraintBottom_toTopOf="@id/lesson_atvt_last_stats_tv2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lesson_atvt_last_stats_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số câu trả lới sai: "
            android:textColor="@color/wrong_answer_color"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_last_stats_tv1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"/>
        
        <Button
            android:id="@+id/lesson_atvt_last_stats_home_btn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/lesson_atvt_last_stats_tv2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Quay trở lại MENU"
            android:background="@drawable/designed_btn"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>